{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "50mb" },
        "maxDuration": 60
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/index.py"
      }
    ],
    "env": {
      "FLASK_ENV": "production"
    },
    "build": {
      "env": {
        "FLASK_APP": "api/index.py",
        "FLASK_ENV": "production"
      }
    }
  }